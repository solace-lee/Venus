/* components/search/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.input-bar {
  position: fixed;
  top: 260rpx;
  width: 100%;
  display: flex;
  height: 100rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}

.bar {
  border: 1px solid #ccc;
  border-radius: 15rpx;
  font-size: 14px;
  height: 34px;
  width: 460rpx;
  text-align: left;
  margin-left: 10rpx;
  color: #50bba7;
}

.inbar {
  margin-left: 10rpx;
  color: #50bba7;
}

.clean {
  font-size: 32rpx;
  padding: 10rpx;
  color: #fff;
  background: #50bba7;
  border-radius: 5rpx;
}

.showList {
  width: 100%;
  margin-top: 360rpx;
}

.list-color {
  background: #dcf1ed;
}

.list-color:nth-child(2n) {
  background: #fff;
}
