/* pages/subject-list/subject-list.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.header {
  width: 100%;
  position: fixed;
  height: 180rpx;
  display: flex;
  text-align: center;
  flex-direction: column;
  justify-content: space-between;
  background: #f5f5f5;
}

.title {
  font-weight: 800;
  /* height: 100rpx; */
  color: #50bba7;
}

.select {
  height: 40rpx;
  width: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
}

.picker {
  padding: 10rpx;
  font-size: 32rpx;
  color: #fff;
  background: #50bba7;
  border-radius: 10rpx;
}

.info {
  height: 40rpx;
  width: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  flex-direction: row;
  /* justify-content: space-around; */
  font-size: 28rpx;
}

.flat {
  color: #50bba7;
  flex: 1;
}

.pass {
  color: #50bba7;
  flex: 1;
}

.flat-red {
  color: red;
  flex: 1;
}

.pass-red {
  color: red;
  flex: 1;
}

.list-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 180rpx;
}

.list {
  width: 100%;
}