/* pages/subject/subject.wxss */
.container {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100%;
}

.list-container {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100%;
  height: 900rpx;
}

.list {
  color: #50bba7;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.sub-info {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, .5)
}

.bg {
  width: 80%;
  height: 80%;
  background: #f5f5f5;
  border-radius: 10rpx;
}