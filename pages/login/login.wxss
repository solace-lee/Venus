/* pages/login/login.wxss */
.container{
  position: absolute;
  top: 0;
  display: flex;
  width: 100%;
  height: 100%;
  padding: 100rpx 0;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.icon{
  width: 144rpx;
  height: 144rpx;
  /* border-radius: 50%; */
}

.btn{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.changeType{
  color: #999;
  font-size: 28rpx;
}

.refresh{
  color: #999;
  font-size: 28rpx;
}

.input-bar{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 200rpx;
}

.bar {
  border: 1px solid #f5f5f5;
  border-radius: 15rpx;
  font-size: 14px;
  height: 34px;
  width: 460rpx;
}

.in-bar{
  color: #999;
}