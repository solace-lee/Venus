/* pages/login/login.wxss */

.container {
  position: absolute;
  top: 0;
  display: flex;
  width: 100%;
  height: 100%;
  padding: 100rpx 0;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.icon {
  width: 144rpx;
  height: 144rpx;
  /* border-radius: 50%; */
}

.title {
  color: #50bba7;
}

.btn {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.changeType {
  color: #50bba7;
  font-size: 28rpx;
}

.refresh {
  color: #50bba7;
  font-size: 28rpx;
}

.input-bar {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 200rpx;
  color: #50bba7;
}

.btn-btn {
  color: #50bba7;
}

.bar {
  border: 1px solid #ccc;
  border-radius: 15rpx;
  font-size: 14px;
  height: 34px;
  width: 460rpx;
}

.in-bar {
  color: #50bba7;
  margin-left: 10rpx;
}
